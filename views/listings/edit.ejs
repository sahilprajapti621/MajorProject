
    <% layout("./layouts/boilerplate") -%>

<body>
  <div class="row">
    <div class="col-8 offset-2">
      <form action="/listings/<%= listing._id %>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <br><br>
        <h3 style="text-align: center" class="mt-3 mb-3">Edit Listing</h3>
        <br />
        <div>
          <label for="title" class="form-label">Title</label>
          &emsp;
          <input
            type="text"
            name="listing[title]"
            id="title"
            placeholder="Enter the title"
            class="form-control"
            required
            value="<%= listing.title %>"
          />
          <div class="invalid-feedback">Enter valid title</div>
        </div>
        <br />
        <div>
          <label for="description" class="form-label"
            >Description</label
          >
          &emsp;
          <textarea
            name="listing[description]"
            id="description"
            placeholder="Write the description for the place"
            class="form-control"
            required
          > <%= listing.description %> </textarea>
          <div class="invalid-feedback">Enter valid description</div>
        </div>
        <br />
        <div>
          <label for="image" class="form-label">Upload New Image </label>
          &emsp;
          <input type="file" 
          name="listing[image]"
          id="image"
          class="form-control"
          >
          <div class="invalid-feedback">Please enter link for image</div>
        </div>
        <br />

        <div class="row">
            <div class="col-md-4">
                <label for="price" class="form-label">Price</label>
                &emsp;
                <input
                  type="number"
                  id="price"
                  name="listing[price]"
                  class="form-control"
                  required
                  placeholder="Enter the price/night"
                  value="<%= listing.price %>"
                />
                <div class="invalid-feedback">Enter valid price</div>
              </div>
      
              <div class="col-md-8">
                  <label for="country" class="form-label">Country</label>
                  &emsp;
                  <input
                    type="text"
                    id="country"
                    name="listing[country]"
                    class="form-control"
                    required
                    placeholder="Enter Country"
                    value="<%= listing.country %>"
                  />
                  <div class="invalid-feedback">Enter valid country</div>
              </div>
        </div>
        
        <br/>
        <div>
          <label for="location" class="form-label">Location</label>
          &emsp;
          <input type="text" id="location" name="listing[location]" placeholder="Enter the Country" class="form-control" value="<%= listing.location %>" required />
          <div class="invalid-feedback">Enter valid location</div>
        </div>
        
        

        <br />
        <div class="d-flex justify-content-center align-items-center">
          <button class="btn  add-btn px-3">Save Changes</button>
          
        </div>
      </form>
    </div>
  </div>
  <br>
</body>

    
</body>
